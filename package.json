{
  "name": "envshh",
  "version": "1.0.0",
  "description": "A command line tool to securely and automatically manage, store environment variables.",
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json|md)\"",
    "lint": "eslint --ext .js,.ts,.json --fix .",
    "dev": "nodemon --watch src src/index.ts",
    "build": "npm run format && npm run lint && tsc",
    "start": "npm run build && node dist/src/index.js",
    "docker:up": "docker-compose build --no-cache && docker-compose up"
  },
  "bin": {
    "envshh": "./dist/src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sanjib-sen/envshh.git"
  },
  "homepage": "https://github.com/sanjib-sen/envshh#readme",
  "keywords": [
    "dotenv",
    "env",
    "envshh",
    "commandline",
    "cli",
    "environment"
  ],
  "author": "Sanjib Kumar Sen <mail@sanjibsen.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/figlet": "*",
    "@types/node": "*",
    "@types/readline-sync": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "eslint": "*",
    "eslint-config-prettier": "*",
    "eslint-plugin-prettier": "*",
    "nodemon": "*",
    "ts-node": "*",
    "typescript": "*"
  },
  "dependencies": {
    "commander": "*",
    "figlet": "*",
    "readline-sync": "*"
  }
}