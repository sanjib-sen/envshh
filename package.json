{
  "name": "envshh",
  "version": "0.0.20",
  "description": "A command line tool to securely and automatically manage, store environment variables.",
  "type": "module",
  "scripts": {
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json|md)\"",
    "lint": "eslint --ext .js,.ts,.json --fix .",
    "clean": "rm -rf node_modules dist",
    "build": "rm -rf dist  && npm run format && npm run lint && tsc && cp package.json README.md LICENSE dist",
    "test": "npm run build && node dist/index.js -v"
  },
  "bin": {
    "envshh": "src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sanjib-sen/envshh.git"
  },
  "homepage": "https://github.com/sanjib-sen/envshh#readme",
  "keywords": [
    "dotenv",
    "env",
    "envshh",
    "commandline",
    "cli",
    "environment"
  ],
  "author": "Sanjib Kumar Sen <mail@sanjibsen.com>",
  "license": "MIT",
  "peerDependencies": {
    "commander": "~11.0.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.6",
    "@types/node": "^20.5.8",
    "@types/readline-sync": "^1.4.4",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "husky": "^8.0.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@commander-js/extra-typings": "~11.0.0",
    "chalk": "^5.3.0",
    "figlet": "^1.6.0",
    "lowdb": "^6.0.1",
    "readline-sync": "^1.4.10",
    "zod": "^3.22.2"
  }
}
