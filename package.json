{
  "name": "envshh",
  "version": "1.0.0",
  "description": "A command line tool to securely and automatically manage, store environment variables.",
  "type": "module",
  "scripts": {
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json|md)\"",
    "lint": "eslint --ext .js,.ts,.json --fix .",
    "clean": "rm -rf node_modules dist package-lock.json",
    "dev": "nodemon --exec node --loader ts-node/esm --watch src src/index.ts",
    "register": "node --loader ts-node/esm -r ts-node/register src/index.ts",
    "build": "rm -rf dist  && npm run format && npm run lint && tsc"
  },
  "bin": {
    "envshh": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sanjib-sen/envshh.git"
  },
  "homepage": "https://github.com/sanjib-sen/envshh#readme",
  "keywords": [
    "dotenv",
    "env",
    "envshh",
    "commandline",
    "cli",
    "environment"
  ],
  "author": "Sanjib Kumar Sen <mail@sanjibsen.com>",
  "license": "MIT",
  "peerDependencies": {
    "commander": "*"
  },
  "devDependencies": {
    "@types/figlet": "*",
    "@types/node": "*",
    "@types/readline-sync": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "eslint": "*",
    "eslint-config-prettier": "*",
    "eslint-plugin-prettier": "*",
    "nodemon": "*",
    "ts-node": "*",
    "typescript": "*"
  },
  "dependencies": {
    "@commander-js/extra-typings": "*",
    "figlet": "*",
    "lowdb": "*",
    "readline-sync": "*",
    "zod": "*"
  }
}
